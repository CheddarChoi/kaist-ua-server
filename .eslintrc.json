{
    "env": {
        "browser": true,
        "es2020": true
    },
    "parserOptions": {
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "rules": {
        "semi": "off",
        "brace-style": "off",
        "object-curly-spacing": [
            "error",
            "always"
        ],
        "keyword-spacing": "off",
        "padded-blocks": [
            "error",
            "never"
        ],
        "comma-dangle": [
            "error",
            "always-multiline"
        ],
        "space-before-blocks": "error",
        "quotes": [
            "error",
            "single"
        ],
        "no-trailing-spaces": "error",
        "eol-last": [
            "error",
            "always"
        ],
        "comma-spacing": "error",
        "space-infix-ops": [
            "error",
            {
                "int32Hint": false
            }
        ],
        "no-multiple-empty-lines": [
            "error",
            {
                "max": 1
            }
        ],
        "key-spacing": [
            "error",
            {
                "beforeColon": false,
                "afterColon": true
            }
        ],
        "semi-spacing": "error"
    },
    "ignorePatterns": [
        "node_modules/**/*"
    ]
}